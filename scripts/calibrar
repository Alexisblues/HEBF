NIVEL=$(cat /sys/class/power_supply/battery/capacity)
mount -o rw,remount /data

	if [ "$NIVEL" == "100" ] ; then
		 mount -o rw,remount /data
		 rm -f /data/system/batterystats.bin
		 busybox echo "Battery calibrated $(date +%A) at $(date +%H:%M)" >> /system/etc/HEBF/app.log
		 mount -o ro,remount /data
	else
		 busybox echo "#Battery not calibrated $(date +%A) at $(date +%H:%M), it is not fully charged" >> /system/etc/HEBF/app.log
	fi
fi
mount -o ro,remount /data